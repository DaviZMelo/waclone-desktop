{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "es5",                          
    "module": "commonjs",                     
    "outDir": "./dist",                        
    "rootDir": "./src",                       
    "strict": true,                           
    "strictNullChecks": false,              
    "strictPropertyInitialization": false,  
    "baseUrl": "./src",     
    "allowJs": true,                  
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@database/*": ["database/*"],
      "@docs/*": ["docs/*"]
    },               
    "esModuleInterop": true,                  
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  },
  "include": ["src/**/*"],
  "exclude": [
    "coverage",
    "jest.config.js",
    "prettier.config.js",
    "jest.setup-file.ts",
    "jest.setup.ts",
    "dist",
    "tsconfig-paths-bootstrap.js",
    "node_modules"
  ]
}